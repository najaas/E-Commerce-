      function fulldelete(id) {
    console.log("Attempting to delete item with ID:", id);                            
    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!",
    }).then(async (result) => {
        if (result.isConfirmed) {
            try {
                const response = await fetch(`/delete?id=${id}`, {
                    method: 'DELETE',
                });
                console.log("Response:", response);
                
                if (!response.ok) {
                    throw new Error('Server responded with ' + response.status);
                }

                const result = await response.json();
                if (result.success) {
                    Swal.fire({
                        title: "Deleted!",
                        text: "Your file has been deleted.",
                        icon: "success",
                    }).then(() => {
                        // This callback ensures that the page only reloads after the user acknowledges the success alert
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        title: "Error!",
                        text: result.Error || "Unknown error occurred, could not delete.",
                        icon: "error",
                    });
                }
            } catch (error) {
                console.error("Deletion failed:", error);
                Swal.fire({
                    title: "Failed to delete!",
                    text: error.toString(),
                    icon: "error",
                });
            }
        }
    });
}

