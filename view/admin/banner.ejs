                <script>
                     function fulldelete(id){
                    Swal.fire({
                            title: "Are you sure?",
              text: "You won't be able to revert this!",
              icon: "warning",
              showCancelButton: true,
              confirmButtonColor: "#3085d6",
              cancelButtonColor: "#d33",
              confirmButtonText: "Yes, delete it!"
            }).then(async(result) => {
                        if(result.isConfirmed){
                            const response=await fetch(`/admin/deletebanner?id=${id}`,{method:`DELETE`})
                            if(!response.ok){
                                throw new Error(`error is product delete section`+response.statusText)
                            }
                            const result=await response.json();
                            if(result.success==true){
                                Swal.fire({
                       title: "Deleted!",
                        text: "Your file has been deleted.",
                         icon: "success"
                       });
                       document.querySelector('.okk').remove()
                            }else{
                                message.innerHTML=result.Error || "unknown error"
                            }
                                           
                        }
                    })
                }
                </script>



