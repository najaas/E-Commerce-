<style>

    /* Style for labels */
label {
  display: block;
  margin-bottom: 5px;
}

/* Style for form inputs */
input[type="text"],
input[type="number"],
textarea {
  width: 40%;
  padding: 8px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

/* Style for file input */
input[type="file"] {
  width: 40%;
  padding: 25px;
  /* margin-bottom: 10px; */
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  height: 50px;
}

/* Style for submit button */
input[type="submit"] {
  background-color: #4CAF50;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  width: 20%;
}

/* Change submit button color on hover */
input[type="submit"]:hover {
  background-color: #45a049;
  
}

/* Style for textarea */
textarea {
  width: 40%;
  padding: 34px;
  /* margin-bottom: 10px; */
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

/* Style for form container */
.form-container {
  /* max-width: 500px; */
  margin: auto;
  padding: 20px;
  border-radius: 5px;
  background-color: #f2f2f2;
}

/* Style for form headings */
h2 {
  text-align: center;
  margin-bottom: 20px;
}
.container4{
    width: 70%;
    height: 40vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

}
.main{
    width: 100%;
    display: flex;
    justify-content: center;
}
</style>



