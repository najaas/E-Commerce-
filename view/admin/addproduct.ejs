<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/admincss/home.css" type="text/css">
    <link rel="stylesheet" href="/css/admincss/addproduct.css">
    <title></title>
</head>

<body>
    <form id="form" method="post" enctype="multipart/form-data" >


        <section class="main">
            <div class="left-div">
                <br>
                <h2 class="logo">Pe - C<span style="font-weight: 100; ">art</span></h2>
                <hr class="hr"/>
                <ul class="nav">
                    <li><a href="/admin/dashboard"><i class="fa fa-th-large"></i>Dashboard</a></li>
                    <li><a href="/admin/showproduct"><i class="fa fa-user"></i> Show Product</a></li>
                    <li><a href="/admin/category"><i class="fa fa-key"></i>Add Ctogory</a></li> 
                    <li class="active"><a href="/admin/addproduct"><i class="fa fa-desktop"></i>Add Product</a></li>
                    <li><a href="/admin/userlist"><i class="fa fa-gear"></i> User List</a></li>
                    <li><a href="/admin/banner"><i class="fa fa-bullhorn"></i>Banner</a></li>
                    <li><a href="/admin/addadmin"><i class="fa fa-user"></i>Add a Admin</a></li>
                    <li><a href="/login"><i class="fa fa-power-off"></i>Logout</a></li>
                </ul>
                <br><br>
                <img src="image/s.png" class="support">
            </div>

            <div class="right-div">




                <div id="main">
                    <br>
                    <div class="head">
                        <!-- <div class="col-div-6">
                            <p class="nav"> Add Product</p>
                        </div> -->

                        <div class="profile">


                            <div class="profile">

                                <img src="image/user.png" class="pro-img" />
                                <p> Najas A <i class="fa fa-ellipsis-v dots" aria-hidden="true"></i></p>
                                <div class="profile-div">
                                    <p><i class="fa fa-user"></i> Profile</p>
                                    <p><i class="fa fa-cogs"></i> Settings</p>
                                    <p><a href="/login"><i class="fa fa-power-off"></i> Log Out </a></p>
                                </div>
                            </div>
                        </div>
                        <!-- <div class="clearfix"></div> -->
                    </div>

                    <div class="headadd">
                        <br>
                        <h1>Add Product</h1>
                        <br>

                        <div class="container2">
                            <label for="image">Image</label>
                            <input type="file" accept="image/*"placeholder="Product image" id="image" name="image" required >
                            <br>
                            <label for="name" id="name" >Name</label>
                            <input type="text" placeholder="Product name" id="name" name="name" required >
                           
                            <label for="category" id="category" >Category</label>
                            
                            <select name="category" id="name" name="category" required >
                                
                            <option value="">Select Category</option>
                            <% category.forEach((data) => { %>
                            <option value="<%= data.category %>"><%= data.category %></option>
                            <% }) %>
                        </select>
                            
                            <label for="price">Price</label>
                            <input type="number" placeholder="product price" id="price" name="price" required >
                            
                            <label for="description">Description</label><br>
                            <textarea placeholder="Product Discription" name="description" id="description" cols="50" rows="4"></textarea>
            
                            <label for="price">Discount Percentage</label>
                            <input type="number" placeholder="product price" id="price" name="DiscountPercentage" required >


                            <button type="submit">Add</button>
                        </div>

                    </div>
                    <br /><br /><br />
                    <!--  -->

                    <div class="clearfix"></div>
                    <br /><br />

                </div>
            </div>
        </section>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
            $(document).ready(function(){
              $(".profile p").click(function(){
                $(".profile-div").toggle();
                
              });
              $(".noti-icon").click(function(){
                $(".notification-div").toggle();
              });
            });
            </script>
